generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Product {
  id              String      @id @default(cuid())
  name            String
  price           Int
  image           String?
  isAvailable     Boolean     @default(true)
  categoryId      String
  cookingImage    String?
  nutritionImage  String?
  description     String?
  description_bar String?
  description_bn  String?
  description_ctg String?
  description_noa String?
  name_bar        String?
  name_bn         String?
  name_ctg        String?
  name_noa        String?
  pieces          Int         @default(0)
  pointsReward    Int         @default(0)
  weight          Int         @default(0)
  sku             String?     @unique
  stage           String      @default("Draft")
  type            ProductType @default(SINGLE)
  inventory       Inventory[]
  modifiers       Modifier[]
  orderItems      OrderItem[]
  comboItems      ComboItem[] @relation("ComboParent")
  partOfCombos    ComboItem[] @relation("ComboChild")
  category        Category    @relation(fields: [categoryId], references: [id])
  images          String[]
  totalSold       Int         @default(0)
  createdAt       DateTime    @default(now())
}

model ComboItem {
  id        String  @id @default(cuid())
  parentId  String
  childId   String
  quantity  Int     // Units of child product required
  parent    Product @relation("ComboParent", fields: [parentId], references: [id], onDelete: Cascade)
  child     Product @relation("ComboChild", fields: [childId], references: [id])

  @@unique([parentId, childId])
}

enum ProductType {
  SINGLE
  COMBO
}

model Modifier {
  id        String   @id @default(cuid())
  name      String
  options   String[]
  productId String
  product   Product  @relation(fields: [productId], references: [id])
}

model OrderItem {
  id                String  @id @default(cuid())
  quantity          Int
  price             Int
  productId         String
  orderId           String
  selectedModifiers String?
  order             Order   @relation(fields: [orderId], references: [id])
  product           Product @relation(fields: [productId], references: [id])
}

model Category {
  id       String    @id @default(cuid())
  name     String
  products Product[]
}

model PromoCard {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrl    String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
}

model SiteConfig {
  id              String   @id @default(cuid())
  contactPhone    String   @default("+880 1804 221 161")
  contactEmail    String   @default("crabkhaibangladesh@gmail.com")
  contactAddress  String   @default("195 Green Road, Dhaka")
  shopName        String   @default("Crab & Khai")
  logoUrl         String?
  measurementUnit String   @default("PCS") // Options: PCS, WEIGHT, VOLUME
  allergensText   String   @default("Crustaceans, Shellfish")
  certificates    String[]
  adminSetupToken String   @default("crab-secret-setup-123")
  primaryColor    String   @default("#E60000")
  secondaryColor  String   @default("#0f172a")
  taxPercentage   Float    @default(0.0)
}

model Hub {
  id        String      @id @default(cuid())
  name      String
  location  String
  expenses  Expense[]
  freezers  Freezer[]
  inventory Inventory[]
  orders    Order[]
  users     User[]
}

model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  phone     String?   @unique
  role      Role      @default(USER)
  hubId     String?
  image     String?
  password  String?
  address   String?
  points    Int       @default(0)
  status    String    @default("Bronze")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  accounts  Account[]
  sessions  Session[]
  hub       Hub?      @relation(fields: [hubId], references: [id])
}

model Account {
  id                String  @id @default(cuid())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       Int
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Inventory {
  id        String   @id @default(cuid())
  hubId     String
  productId String
  quantity  Int      @default(0)
  updatedAt DateTime @updatedAt
  freezerId String?
  freezer   Freezer? @relation(fields: [freezerId], references: [id])
  hub       Hub      @relation(fields: [hubId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}

model Freezer {
  id          String      @id @default(cuid())
  name        String
  temperature Float
  capacity    Int
  hubId       String
  hub         Hub         @relation(fields: [hubId], references: [id])
  inventory   Inventory[]
}

model Expense {
  id          String   @id @default(cuid())
  title       String
  amount      Float
  category    String
  date        DateTime @default(now())
  hubId       String?
  description String?
  createdAt   DateTime @default(now())
  hub         Hub?     @relation(fields: [hubId], references: [id])
}

model Order {
  id              String      @id @default(cuid())
  orderId         String      @unique
  status          String      @default("PENDING")
  customerName    String
  customerPhone   String
  customerAddress String
  source          String      @default("WEB")
  totalAmount     Int
  createdAt       DateTime    @default(now())
  hubId           String?
  hub             Hub?        @relation(fields: [hubId], references: [id])
  items           OrderItem[]
}

model PaymentConfig {
  id                  String   @id @default(cuid())
  isActive            Boolean  @default(true)
  codEnabled          Boolean  @default(true)
  bkashEnabled        Boolean  @default(false)
  bkashAppKey         String?
  bkashSecretKey      String?
  bkashUsername       String?
  bkashPassword       String?
  nagadEnabled        Boolean  @default(false)
  nagadMerchantNumber String?
  nagadPublicKey      String?
  nagadPrivateKey     String?
  selfMfsEnabled      Boolean  @default(false)
  selfMfsType         String?
  selfMfsPhone        String?
  selfMfsInstruction  String?
  selfMfsQrCode       String?
  advancePaymentType  String?
  advancePaymentValue Int?
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

model SecurityLog {
  id        String   @id @default(cuid())
  ipAddress String
  action    String
  severity  String
  details   String?
  userAgent String?
  createdAt DateTime @default(now())
}

model TrustedDevice {
  id         String   @id @default(cuid())
  deviceId   String   @unique
  name       String
  userAgent  String?
  lastUsed   DateTime @default(now())
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  browser    String?
  deviceType String?
  ipAddress  String?
  location   String?
  os         String?
}

model Notification {
  id        String   @id @default(cuid())
  title     String
  message   String
  type      String   @default("INFO")
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}

enum Role {
  SUPER_ADMIN
  HUB_ADMIN
  USER
}

model HeroSlide {
  id          String   @id @default(cuid())
  imageUrl    String
  title       String
  title_bn    String?
  subtitle    String?
  subtitle_bn String?
  buttonText  String?
  buttonLink  String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model StorySection {
  id        String   @id @default(cuid())
  type      String   @unique
  content   Json
  updatedAt DateTime @updatedAt
}
